source $HOME/.vimrc

" colorscheme Tomorrow-Night-Bright
colorscheme lanai
set gfn=Inconsolata-dz:h14
set guioptions=egmrt
set showtabline=2

set transparency=5

set lines=50
set columns=175

set cursorline

" Show invisible chars with \l
set list
nmap <leader>l :set list!<CR>
set listchars=tab:▸\ ,eol:¬


" Vim's relative number FTW!
set relativenumber

set colorcolumn=85
