source $HOME/.vimrc

colorscheme mustang
set gfn=Inconsolata:h16
set guioptions=egmrt
set showtabline=2

set transparency=5

set lines=50
set columns=175

set cursorline

" Show invisible chars with \l
set list
nmap <leader>l :set list!<CR>
set listchars=tab:▸\ ,eol:¬


" Vim's relative number FTW!
set relativenumber

set colorcolumn=85
