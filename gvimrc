source $HOME/.vimrc

set background=dark
colorscheme base16-solarized
set gfn=Inconsolata-dz:h14
set guioptions=egmrt
set showtabline=2
set bg=dark

set transparency=0

set lines=50
set columns=175

set cursorline

" Show invisible chars with \l
set list
nmap <leader>l :set list!<CR>
set listchars=tab:▸\ ,eol:¬


" Vim's relative number FTW!
set relativenumber

set colorcolumn=85
